extends layout

block content
  h1= title

  <form action="/users/register" method="POST">
      <fieldset>
        <label>Username</label>
        <input type ="text" id = 'username' name="username" placeholder="renfield" required>
        <br><br>

        <label>Email ID</label>
        <input type ="email" id = 'email' name="email" placeholder="abc@example.com" required>
        <br><br>

        <label>Password</label>
        <input type="password" id = "password" name="password" required>
        <br><br>

        <button type ="reset">Reset</button>
        <button type ="submit">Submit</button>
        <br></br>
        <a id="loginlink" href="/users/login">Login</a>
      </fieldset>
  </form>
    

  h3(style="color: orange")=msg
